 {{> nav}}

<div class="form-content">

  <section class="new-error-handler">
    <div>
      <h3 class="errorTitle">{{errorTitle}}</h3>
      <p class="errorBody">{{errorBody}}</p>
    </div>
  </section>

  <section class="input-form">

    <form action="/gallery" method="post" role="form" enctype="application/x-www-form-urlencoded">
      <h2>New Photo Entry</h2>

      <div class="form-group">

        <input type="text" class="form-control" name="title" placeholder="photo title" required>
      </div>

      <div class="form-group">

        <input type="text" class="form-control" name="author" placeholder="photo author" required>
      </div>


      <div class="form-group">

        <input type="url" class="form-control" name="link" placeholder="URL link" required>
      </div>

      <div class="form-group">
 
        <textarea type="text" class="form-control-desc" id="body-input" name="description" placeholder="Photo description" required></textarea>
      </div>

      <div class="buttonDiv">
        <button type="submit" class="btn-submit" value="OK">Submit</button>
      </div>

    </form>

  </section>

</div>