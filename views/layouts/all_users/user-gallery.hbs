{{> nav-small}}
{{> header}}
{{> nav}}

<main class="main-user">

  <section class="user-head">
    <div class="main-username">
      <div class="name">{{username}}</div>
    </div>

    <div class="delete-page"><a href="/delete">Delete My Page</a></div>
  </section>

  <section class="user-images">
    {{#each userImage}}
    <div class="image-card">
      <div class="image">
        <a href="/gallery/{{id}}"><img src="{{link}}" class="single-img" loading="lazy" alt="{{title}}"></a>
        
      </div>

      <div class="image-card-detail">
        <div class="image-card-title">
          {{title}}
        </div>

        <div class="image-author">
          Photo by:&nbsp;{{author}}
        </div>

        <div class="image-card-updated">
          Last updated:&nbsp;{{updated_at}}
        </div>
      </div>
    </div>
    {{/each}}
  </section>

</main>